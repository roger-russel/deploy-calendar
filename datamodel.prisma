type Calendar {
  id: ID! @id
  name: String!
  description: String!
  projects: [Project!]! @relation(link: INLINE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  deletedAt: DateTime! @deletedAt
