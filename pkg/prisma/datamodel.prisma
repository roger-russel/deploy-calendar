type User {
  id: ID! @id
  name: String!
  email: String @uniue
  password: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  roles: [Role!]! @relation(link: INLINE)
  projects: [Project!]! @relation(link: INLINE)
}

type Role {
  id: ID! @id
  name: String!
  description: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt  
}

type Project {
  id: ID! @id
  name: String!
  hash: String! @uniue
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  users: [User!]! @relation(link: INLINE)
  events: [Event!]! @relation(link: INLINE)
}

type Event {
  id: ID! @id
  name: String!
  tags: [String]
  context: Json # Context information is up to you decides what should be here
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
